{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "(C/C++ DEBUG) compile a source for problem solving",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/run"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"label": "'run' execute",
			"type": "shell",
			"command": "${fileDirname}/run",
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}