{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Debugging",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/run",
            "args": ["<", "${fileDirname}/sample.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb에 자동 서식 지정 사용",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}